package application;

import character.Hero;

public class Delay extends Thread {
	
	private boolean hold;
	private long time;
	private Hero hero;
	
	public Delay(long time, Hero hero) {
		this.time = time;
		this.hero = hero;
	}
	
	public void run() {
		try {
			hold = true;
			Thread.sleep(time);
			hold = false;
			hero.plusAx(-1);
			
		} catch (InterruptedException e) {
			hold = false;
		}
	}

	public boolean isHold() {
		return hold;
	}

	public void setHold(boolean hold) {
		this.hold = hold;
	}
	
}