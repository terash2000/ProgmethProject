package application;

public class Delay extends Thread {
	
	private long time;
	private double data;
	
	public Delay(long time) {
		this.time = time;
	}
	
	public Delay(long time, double data) {
		this.time = time;
		this.data = data;
	}
	
	public void run() {
		try {
			Thread.sleep(time);
		} catch (InterruptedException e) {
			
		}
		start();
	}

	public double getData() {
		return data;
	}
}