package application;

public class Delay extends Thread {
	
	private boolean running = true;
	private long time;
	
	public Delay(long time) {
		this.time = time;
	}
	
	public void run() {
		try {
			running = true;
			Thread.sleep(time);
			running = false;
			
		} catch (InterruptedException e) {
			running = false;
		}
	}

	public boolean isRunning() {
		return running;
	}
	
}