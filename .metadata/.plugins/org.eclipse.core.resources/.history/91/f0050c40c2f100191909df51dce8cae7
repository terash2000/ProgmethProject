package application;

public class Delay extends Thread {
	
	private boolean hold;
	private long time;
	
	public Delay(long time) {
		this.time = time;
	}
	
	public void run() {
		try {
			hold = true;
			Thread.sleep(time);
			hold = false;
			
		} catch (InterruptedException e) {
			hold = false;
		}
	}

	public boolean isHold() {
		return hold;
	}

	public void setHold(boolean hold) {
		this.hold = hold;
	}
	
}